#------------------------------------------
# Sample vampire input file to perform
# benchmark calculation for v4.0
#
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
dimensions:unit-cell-size = 3.54 !A
dimensions:system-size-x = 7.7 !nm
dimensions:system-size-y = 7.7 !nm
dimensions:system-size-z = 7.7 !nm

#------------------------------------------
# Material Files:
#------------------------------------------
material:file = Co.mat


local-temperature-pulse:cell-size = 80,80,1.42316667 #A
local-temperature-pulse:temperature-profile = vertical
local-temperature-pulse:penetration-depth = 300 !A
local-temperature-pulse:electron-thermal-conductivity = 25  #J/K/m/s
local-temperature-pulse:phonon-thermal-conductivity = 5  #J/K/m/s
local-temperature-pulse:substrate-temperature = 300.0 
local-temperature-pulse:output-microcell-data

cells:macro-cell-size-x = 80 !nm
cells:macro-cell-size-y = 80 !nm
cells:macro-cell-size-z = 1.42316667  !A
cells:output-cells

sim:two-temperature-phonon-heat-capacity = 6.934e6 
sim:two-temperature-electron-phonon-coupling = 2.5e17
sim:two-temperature-electron-heat-capacity = 1e3
sim:two-temperature-heat-sink-coupling =  0.05e12  #1/s

sim:laser-pulse-power= 1.0 #J/m^2
sim:laser-pulse-time = 1 !ps # 
sim:second-laser-pulse-delay-time = 0 !ps #used for square pulse with gaussian ramps

#------------------------------------------
# Simulation attributes:
#------------------------------------------

sim:temperature = 300.0
sim:equilibration-temperature = 300.0
sim:time-steps-increment = 1000
sim:equilibration-time-steps = 1
sim:total-time-steps = 100000
sim:time-step = 0.1 !fs

#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program = localised-temperature-pulse
sim:integrator = llg-heun

#------------------------------------------
# data output
#------------------------------------------
output:real-time
output:magnetisation

screen:time-steps
screen:magnetisation-length
