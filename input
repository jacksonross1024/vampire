#material[]:spin-polarisation-diffusion =  #beta'
#material[]:spin-accumulation =  # spin-up - spin-down C/m^3 = states/eV/atom * 25 meV (300K) [1e6 - 1e8 C/m^3]
#material[]:diffusion-constant = # ms^2 [1e-2 - 1e-4]
#material[]:sd-exchange-constant =  !eV #Jsd ~ ferromagnetic exch (50 meV)
