#------------------------------------------
# Sample vampire input file to perform
# benchmark calculation for v4.0
#
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
dimensions:unit-cell-size = 3.54 !A
dimensions:system-size-x = 8 !nm
dimensions:system-size-y = 8 !nm
dimensions:system-size-z = 8 !nm

create:crystal-structure = fcc
#------------------------------------------
# Material Files:
#------------------------------------------
material:file = Co.mat

#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:temperature = 300.0 # 198415 300: 196788
sim:time-steps-increment = 100
sim:equilibration-time-steps = 1000
sim:loop-time-steps = 50000
sim:time-step= 1e-1 !fs

sim:applied-voltage = 5e5 #eV/hv <or> 1e1 V/m * C/e- -> kg m^2 / s^2 / J s
#sim:fluence = 1.4 #mJ/cm**2
#sim:photon-energy = 1.5
sim:e-e_coupling = 1e-4 
sim:e-a_coupling = 49.6
sim:two-temperature-electron-phonon-coupling = 1.06e17

sim:omp-threads= 8
sim:CASTLE-MD-rate = 10
sim:ee-scattering-angle= 1
sim:x_vector = -1
sim:y_vector = -1
sim:z_vector = -1

sim:CASTLE-min-as = -0.66
sim:CASTLE-max-as = 1.0
#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program = CASTLE
sim:integrator = velocity-verlet

#------------------------------------------
# data output
#------------------------------------------
output:real-time
output:magnetisation

screen:time-steps
screen:magnetisation-length

