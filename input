#------------------------------------------
# Sample vampire input file to perform
# benchmark calculation for v4.0
#
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
dimensions:unit-cell-size = 4.07 !A
dimensions:system-size-x = 30 !nm
dimensions:system-size-y = 30 !nm
dimensions:system-size-z = 16 !nm
create:crystal-structure = fcc
#------------------------------------------
# Material Files:
#------------------------------------------
material:file = Au.mat

#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:temperature = 300.0
sim:time-steps-increment = 100
sim:equilibration-time-steps = 1
sim:loop-time-steps = 200000
sim:time-step = 1e-2 !fs

#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program = CASTLE
sim:integrator = velocity-verlet

#------------------------------------------
# data output
#------------------------------------------
output:real-time
output:magnetisation

screen:time-steps
screen:magnetisation-length
