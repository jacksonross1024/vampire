#------------------------------------------
# Sample vampire input file to perform
# benchmark calculation for v4.0
#
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
#dimensions:unit-cell-size = 2.507 !A

dimensions:system-size-x = 100.1 !nm
dimensions:system-size-y = 100.1 !nm
dimensions:system-size-z = 2.616 !nm

#create:periodic-boundaries-x
#create:periodic-boundaries-y
#create:periodic-boundaries-z
#------------------------------------------
# Material Files:
#------------------------------------------
material:unit-cell-file = CrI3.ucf
material:file = CrI3.mat
create:crystal-sublattice-materials=true
#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:equilibration-temperature = 10
sim:temperature = 10

sim:time-steps-increment = 1

sim:preconditioning-steps = 500
sim:equilibration-time-steps=50000
sim:loop-time-steps = 1000
#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program = time-series #time variable magnetic field; SOT; STT
sim:integrator = monte-carlo

#------------------------------------------
# data output
#------------------------------------------
config:atoms = end 

output:output-rate=1000
output:time-steps
output:material-mean-magnetisation
output:mean-total-torque
output:total-energy 


